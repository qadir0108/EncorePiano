
@{
    ViewBag.Title = "Cleints";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

        #clients_grid_paginate {
        float: right !important;
    }

    #clients_grid_wrapper {
        margin-top: 0px !important;
    }

    #clients_grid {
        margin: 0px !important;
    }

    .map-container-address {
        height: 300px;
        width: 100%;
    }

    #gmap_location {
        height: 100% !important;
        width: 100% !important;
    }
    #ClientsModal .modal-lg{
        width:75%;
    }
       #clients_grid .dataTables_wrapper .dt-buttons{
        margin-top:-140px;
    }
   
</style>
    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">

        <div class="row">
            <div class="col-md-12">

                <div class="portlet box blue-hoki">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-globe"></i> Clients
                        </div>
                        <div class="tools"> </div>
                    </div>
                    <div class="portlet-body">
                        <div class="row">
                            <div class="col-md-12">
                                <a href="#ClientsModal" data-toggle="modal" class="btn btn-default">
                                    <i class="fa fa-plus"></i> Add Address
                                </a>
                            </div>
                        </div>

                        <div class="row margin-top-15">
                            <div class="col-md-12">
                               
                                    <table class="table table-striped table-bordered table-hover dt-responsive" id="clients_grid"></table>
                               
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>

    </div>

</div>

<div id="ClientsModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" id="ClientContainer">
                @{
                    Html.RenderPartial("Add",new WFP.ICT.Web.Models.NewAddressVm());
                }
            </div>
        </div>

    </div>
</div>

<script src="http://maps.google.com/maps/api/js?key=AIzaSyAnRxR1BIFZMEmhwyFB6QXrzbsCoFeTVKA"></script>
<script src="~/assets/global/plugins/gmaps/gmaps.js"></script>


<script type="text/javascript">

    $(function () {
        $.validator.unobtrusive.parse('form');
        var form = $('#frm').get(0);
        var settings = $.data(form, 'validator').settings;
        settings.ignore = '';

        ClientsGridConfig.initGrid();
    });

    var AddressConfigs = function () {
        handleAddSuccess = function (data, status) {
            if (data.IsSucess) {
                wfp.showSuccess('Address has been added successfully.');
                $('#ClientsModal').modal('hide');
            }
            else {
                wfp.showError(data.ErrorMessage);
            }
        };
        return {
            initAddSuccess: function (data, status) {
                handleAddSuccess(data, status);
            }
        }
    }();

    var ClientsGridConfig = function () {

        var grid = new Datatable();

        handleInitGrid = function () {
            grid.init({
                src: $("#clients_grid"),
                dataTable: {
                    "serverSide": true,
                    "processing": true,
                    "ajax": {
                        "url":
                        "/Customers/InitializeClients",
                    },
                    "columns": [

                     { "title": "Type", "data": "Type" },

                     { "title": "Name", "data": "Name" },

                     { "title": "Created At", "data": "Created" },

                     { "title": "Contact Number", "data": "Phone" },

                     { "title": "Account Code", "data": "Account" },

                     { "title": "Comment", "data": "Comment" },

                      { "title": "Address", "data": "Address" },

                        { "title": "Actions", "data": "Actions", sortable: false },


                    ],
                    "lengthMenu": [
                                    [5, 10, 15, 20, -1],
                                    [5, 10, 15, 20, "All"]
                    ],
                    "pageLength": 10,

                    buttons: [
                    {
                        extend: 'print', exportOptions: {
                            columns: ':visible'
                        }, className: 'btn default'
                    },
                    {
                        extend: 'pdf', exportOptions: {
                            columns: ':visible'
                        }, className: 'btn default'
                    },
                    {
                        extend: 'csv', exportOptions: {
                            columns: ':visible'
                        }, className: 'btn default'
                    },
                    { extend: 'colvis', className: 'btn default', text: 'Columns' }
                    ],
                    colReorder: true,

                    "dom": "<'row'<'col-md-12'B>><'row'<'col-md-6 col-sm-12'l><'col-md-6 col-sm-12'f>r><'table-scrollable't><'row'<'col-md-5 col-sm-12'i><'col-md-7 col-sm-12'p>>", // horizobtal scrollable datatable

                    "language": {
                        "aria": {
                            "sortAscending": ": activate to sort column ascending",
                            "sortDescending": ": activate to sort column descending"
                        },
                        "emptyTable": "No data available in table",
                        "info": "Showing _START_ to _END_ of _TOTAL_ records",
                        "infoEmpty": "No records found",
                        "infoFiltered": "(filtered1 from _MAX_ total records)",
                        "lengthMenu": "Show _MENU_",
                        "search": "Search:",
                        "zeroRecords": "No matching records found",
                        "paginate": {
                            "previous": "Prev",
                            "next": "Next",
                            "last": "Last",
                            "first": "First"
                        }
                    },
                    "pagingType": "bootstrap_number",
                    "columnDefs": [
                    ],
                   
                },

            });
        };

        hanleReloadGrid = function () {
            $("#clients_grid").DataTable().ajax.reload(null, true);
        };

        return {
            initGrid: function () {
                handleInitGrid();
            },

            initLoadGrid: function () {
                hanleReloadGrid();
            }
        }

    }();


    var lng = '';
    var lat = '';
    $('#ClientsModal').on('hidden.bs.modal', function () {
        $("#ClientsModal #frm").get(0).reset();
        $('#ClientsModal').find('.help-block-error').empty();
        $("#ClientContainer").find('#AddressLng').val('');
        $("#ClientContainer").find('#AddressLat').val('');

    });

    $('#ClientsModal').on('shown.bs.modal', function (e) {
        var map = new GMaps({
            el: '#gmap_location',
            lat: lat,
            lng: lng,
        });
        map.setCenter(lat, lng);
        map.addMarker({
            lat: lat,
            lng: lat,
            draggable: true,
            dragend: function (event) {
                var lat = event.latLng.lat();
                var lng = event.latLng.lng();
                $("#ClientContainer").find('#AddressLng').val(lng);
                $("#ClientContainer").find('#AddressLat').val(lat);

            },
            //infoWindow: {
            //    content: '<p><h2>Address</h2></p>' + add + '</p></p>' + city + '</p> </p>' + state + '</p>'
            //}
        });
    });
</script>