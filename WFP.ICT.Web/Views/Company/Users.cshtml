    var epm = function () {

        var grid = new Datatable();
        
        return {
            initGridUsers: function () {

                grid.init({
                    src: $("#epmGrid"),
                    dataTable: {
                        "serverSide": true,
                        "processing": true,
                        "ajax": {
                            "url": "/Company/InitializeUsers",
                        },
                        "initComplete": function (settings, json) {
