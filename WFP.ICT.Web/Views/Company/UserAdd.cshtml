@model WFP.ICT.Web.Models.CompanyUsersVm

<style>

</style>

<!-- BEGIN CONTENT -->

        <!-- BEGIN PAGE BASE CONTENT -->

            @using (Ajax.BeginForm("SaveUser", "Company", null, new AjaxOptions { HttpMethod = "POST", OnSuccess = "epm.addSuccessUsers(data,status)" }, new
            {
                @id = "frm",
            }))
            {
                @Html.HiddenFor(x => x.Id)
                <input type="hidden" id="ActionToTake" name="ActionToTake" value="create" />
                        <div class="portlet-body">

                            <div class="row">
                                <div class="col-md-12 ">
                                    <!-- BEGIN SAMPLE FORM PORTLET-->

                                    <div class="portlet light bordered">
                                        <div class="portlet-title">
                                            <div class="caption font-red-sunglo">
                                                <span class="caption-subject bold uppercase"> New User</span>
                                            </div>
                                            <div class="actions">
                                                <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;" data-original-title="" title=""> </a>
                                            </div>
                                        </div>
                                        <div class="portlet-body form">
                                            <div class="form-body">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="form-group form-md-line-input has-success">
                                                            <div class="input-icon">
                                                                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                                                <label>First Name</label>
                                                                @Html.ValidationMessageFor(model => model.FirstName, null, new { @class = "help-block help-block-error" })
                                                                <span class="help-block">Enter FirstName</span>
                                                                <i class="fa fa-user"></i>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <div class="form-group form-md-line-input has-success">
                                                            <div class="input-icon">
                                                                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                                                <label>Last Name</label>
                                                                @Html.ValidationMessageFor(model => model.LastName, null, new { @class = "help-block help-block-error" })
                                                                <span class="help-block">Enter LastName</span>
                                                                <i class="fa fa-user"></i>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <div class="form-group form-md-line-input has-success">
                                                            <div class="input-icon">
                                                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                                                <label>Name<span class="required">*</span></label>
                                                                @Html.ValidationMessageFor(model => model.Name, null, new { @class = "help-block help-block-error" })
                                                                <span class="help-block">Select Name</span>
                                                                <i class="fa fa-user"></i>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <div class="form-group form-md-line-input has-success">
                                                            <div class="input-icon">
                                                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                                                <label>Password <span class="required">*</span></label>
                                                                @Html.ValidationMessageFor(model => model.Password, null, new { @class = "help-block help-block-error" })
                                                                <span class="help-block">Enter Password</span>
                                                                <i class="fa fa-user"></i>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <div class="form-group form-md-line-input has-success">
                                                            <div class="input-icon">
                                                                @Html.EditorFor(model => model.RetypePassword, new { htmlAttributes = new { @class = "form-control" } })
                                                                <label>Retype Password <span class="required">*</span></label>
                                                                @Html.ValidationMessageFor(model => model.RetypePassword, null, new { @class = "help-block help-block-error" })
                                                                <span class="help-block">Enter Password Again</span>
                                                                <i class="fa fa-user"></i>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <button type="submit" onclick="" class="btn blue-steel">Save</button>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
         
            }

