@model WFP.ICT.Web.Models.CompanyPermissionVm

<style>

</style>

<!-- BEGIN CONTENT -->

        <!-- BEGIN PAGE BASE CONTENT -->

            @using (Ajax.BeginForm("SavePermission", "Company", null, new AjaxOptions { HttpMethod = "POST", OnSuccess = "epm.addSuccess(data,status)" }, new
            {
                @id = "frm",
            }))
            {
                @Html.HiddenFor(x => x.Id)

                        <div class="portlet-body">

                            <div class="row">
                                <div class="col-md-12 ">
                                    <!-- BEGIN SAMPLE FORM PORTLET-->

                                    <div class="portlet light bordered">
                                        <div class="portlet-title">
                                            <div class="caption font-red-sunglo">
                                                <span class="caption-subject bold uppercase"> New Permission</span>
                                            </div>
                                            <div class="actions">
                                                <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;" data-original-title="" title=""> </a>
                                            </div>
                                        </div>
                                        <div class="portlet-body form">
                                            <div class="form-body">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="form-group form-md-line-input has-success">
                                                            <div class="input-icon">
                                                                @Html.DropDownListFor(model => model.ClaimType, TempData["ClaimTypes"] as SelectList, htmlAttributes: new { @class = "form-control" })
                                                                <label>Permission Category<span class="required">*</span></label>
                                                                @Html.ValidationMessageFor(model => model.ClaimType, null, new { @class = "help-block help-block-error" })
                                                                <span class="help-block">Select Permssion Category</span>
                                                                <i class="fa fa-user"></i>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <div class="form-group form-md-line-input has-success">
                                                            <div class="input-icon">
                                                                @Html.EditorFor(model => model.ClaimValue, new { htmlAttributes = new { @class = "form-control" } })
                                                                <label>Permission Name <span class="required">*</span></label>
                                                                @Html.ValidationMessageFor(model => model.ClaimValue, null, new { @class = "help-block help-block-error" })
                                                                <span class="help-block">Enter Permission</span>
                                                                <i class="fa fa-user"></i>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <button type="submit" onclick="" class="btn blue-steel">Save</button>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
         
            }

