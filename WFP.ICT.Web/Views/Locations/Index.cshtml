@{
    ViewBag.Title = "Locations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #epmGrid_paginate {
        float: right !important;
    }

    #epmGrid_wrapper {
        margin-top: 0px !important;
    }

    #epmGrid {
        margin: 0px !important;
    }

        #epmGrid .dataTables_wrapper .dt-buttons {
            margin-top: -140px;
        }
</style>
<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">

        <div class="row">
            <div class="col-md-12">

                <div class="portlet box red">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-university"></i> Locations
                        </div>
                        <div class="tools"> </div>
                    </div>
                    <div class="portlet-body">
                        <div class="row">
                            <div class="col-md-12">
                                <a href="#AddModal" data-toggle="modal" class="btn btn-default">
                                    <i class="fa fa-plus"></i> New Location
                                </a>
                            </div>
                        </div>
                        <div class="row margin-top-15">
                            <div class="col-md-12">
                                <table class="table table-striped table-bordered table-hover dt-responsive" id="epmGrid"></table>
                            </div>
                        </div>

                    </div>

                </div>
            </div>

        </div>

    </div>

</div>

<div id="AddModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" id="AddContainer">
                @{
                    Html.RenderPartial("Add", new WFP.ICT.Web.Models.NewLocationVm());
                }
            </div>
        </div>

    </div>
</div>

<script type="text/javascript">

    var wfp = wfp || {};

    $(document).ready(function () {


    $(function () {
        $.validator.unobtrusive.parse('form');
        var form = $('#frm').get(0);
        var settings = $.data(form, 'validator').settings;
        settings.ignore = '';

        initGrid();
    });


    var grid = new Datatable();

    initGrid = function () {

        grid.init({
            src: $("#epmGrid"),
            dataTable: {
                "serverSide": true,
                "processing": true,
                "ajax": {
                    "url":
                    "/Locations/Initialize",
                },
                "columns": [

                    { "title": "Name", "data": "Name", sortable: true },

                    { "title": "Created", "data": "Created" },

                    { "title": "Actions", "data": "Actions", sortable: false },

                ],
                "lengthMenu": [
                    [5, 10, 15, 20, -1],
                    [5, 10, 15, 20, "All"]
                ],
                "pageLength": 10,

                buttons: [
                    {
                        extend: 'print', exportOptions: {
                            columns: ':visible'
                        }, className: 'btn default'
                    },
                    {
                        extend: 'pdf', exportOptions: {
                            columns: ':visible'
                        }, className: 'btn default'
                    },
                    {
                        extend: 'csv', exportOptions: {
                            columns: ':visible'
                        }, className: 'btn default'
                    },
                    { extend: 'colvis', className: 'btn default', text: 'Columns' }
                ],
                colReorder: true,

                "dom": "<'row'<'col-md-12'B>><'row'<'col-md-6 col-sm-12'l><'col-md-6 col-sm-12'f>r><'table-scrollable't><'row'<'col-md-5 col-sm-12'i><'col-md-7 col-sm-12'p>>", // horizobtal scrollable datatable

                "language": {
                    "aria": {
                        "sortAscending": ": activate to sort column ascending",
                        "sortDescending": ": activate to sort column descending"
                    },
                    "emptyTable": "No data available in table",
                    "info": "Showing _START_ to _END_ of _TOTAL_ records",
                    "infoEmpty": "No records found",
                    "infoFiltered": "(filtered1 from _MAX_ total records)",
                    "lengthMenu": "Show _MENU_",
                    "search": "Search:",
                    "zeroRecords": "No matching records found",
                    "paginate": {
                        "previous": "Prev",
                        "next": "Next",
                        "last": "Last",
                        "first": "First"
                    }
                },
                "pagingType": "bootstrap_number",
                "columnDefs": [
                ],

            },
        });

    };

    validateSave = function (data) {
        debugger;
        var form = $('#frm').get(0);
        $('#frm').removeData("validator")
        $('#frm').removeData("unobtrusiveValidation");
        $.validator.unobtrusive.parse('form');
        var settings = $.data(form, 'validator').settings;
        settings.ignore = '.ignore';

        if ($("#frm").valid()) {
            return true;
        }
        else {
            wfp.showError("Please enter correct data.");
            return false;
        }
    };

    addSuccess = function (data, status) {
        if (data.IsSucess) {
            wfp.showSuccess('Location has been saved successfully.');
            $('#AddModal').modal('hide');
            $("#epmGrid").DataTable().ajax.reload(null, true);
        }
        else {
            wfp.showError(data.ErrorMessage);
        }
    };

    initLoadGrid = function () {
        $("#epmGrid").DataTable().ajax.reload(null, true);
    };

    $('#AddModal').on('hidden.bs.modal', function () {
        debugger;
            $('#Name').val("");
            $('#AddModal').find('.help-block-error').empty();
    });

    $('#AddModal').on('shown.bs.modal', function (e) {
        debugger;
        if ($('#Id').val() === "")
            $('#lblNewEdit').text("New");
        else
            $('#lblNewEdit').text("Edit");
    });

    $('body').on('click', '.btnDelete', function () {
        var btnDelete = $(this);
        var id = btnDelete.attr('data-id');
        var dataToPost = "{id : '" + id + "'}";

        wfp.showSwal("Are you sure to delete this?",
            function () {
                $.ajax({
                    type: "POST",
                    url: '/Locations/Delete',
                    data: dataToPost,
                    contentType: "application/json; charset=utf-8",
                    success: function (response) {
                        if (response.IsSucess) {

                            wfp.showSuccess('Location has been deleted successfully.');
                            $("#epmGrid").DataTable().ajax.reload(null, true);

                        } else {
                            wfp.showError(response.ErrorMessage);
                        }
                    },
                    failure: function (response) {
                        wfp.showError('There is erorr in service call.');
                    },
                    complete: function () {
                    }
                });
            });
    });

    $('body').on('click', '.btnEdit', function () {
        var btnEdit = $(this);
        var id = btnEdit.attr('data-id');
        var dataToPost = "{id : '" + id + "'}";
        $.ajax({
            type: "POST",
            url: '/Locations/Edit',
            data: dataToPost,
            contentType: "application/json; charset=utf-8",
            success: function (response) {

                if (response.IsSucess == false) {
                    wfp.showError(response.ErrorMessage);
                }
                else {
                    debugger;
                    $("#AddContainer").html(response);
                    $("#AddModal").modal('show');
                }

            },
            failure: function (response) {
                wfp.showError('There is erorr in service call.');
            },
            complete: function () {
            }

        });
    });

    });
</script>