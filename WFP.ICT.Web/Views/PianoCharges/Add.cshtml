@model WFP.ICT.Web.Models.NewPianoChargesVm
<!-- BEGIN CONTENT -->
<!-- BEGIN PAGE BASE CONTENT -->
@using (Ajax.BeginForm("Save", "PianoCharges", null, new AjaxOptions { HttpMethod = "POST", OnSuccess = "addSuccess(data,status)" }, new
{
    @id = "frm",
}))
{
    @Html.HiddenFor(x => x.Id)

    <div class="portlet-body">

        <div class="row">
            <div class="col-md-12 ">
                <!-- BEGIN SAMPLE FORM PORTLET-->

                <div class="portlet light bordered">
                    <div class="portlet-title">
                        <div class="caption font-red-sunglo">
                            <span class="caption-subject bold uppercase"><label id="lblNewEdit"></label> Piano Charges</span>
                        </div>
                        <div class="actions">
                            @*<a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;" data-original-title="" title=""> </a>*@
                        </div>
                    </div>
                    <div class="portlet-body form">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group form-md-line-input has-success">
                                        <div class="input-icon">
                                            @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
                                            <label>Code <span class="required">*</span></label>
                                            @Html.ValidationMessageFor(model => model.Code, null, new { @class = "help-block help-block-error" })
                                            <span class="help-block">Enter Code</span>
                                            <i class="fa fa-user"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group form-md-line-input has-success">
                                        <div class="input-icon">
                                            @Html.EditorFor(model => model.Details, new { htmlAttributes = new { @class = "form-control" } })
                                            <label>Details <span class="required">*</span></label>
                                            @Html.ValidationMessageFor(model => model.Details, null, new { @class = "help-block help-block-error" })
                                            <span class="help-block">Enter Details</span>
                                            <i class="fa fa-user"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group form-md-line-input has-success">
                                        <div class="input-icon">
                                            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                                            <label>Amonut <span class="required">*</span></label>
                                            @Html.ValidationMessageFor(model => model.Amount, null, new { @class = "help-block help-block-error" })
                                            <span class="help-block">Enter Amonut</span>
                                            <i class="fa fa-user"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                        </div>
                        <div class="col-md-6">
                            <button type="submit" onclick="validateSave()" class="btn blue-steel pull-right">Save</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
}
