@model List<WFP.ICT.Web.Models.OrderVm>
@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <!-- BEGIN CONTENT -->
    <div class="page-content-wrapper">
        <!-- BEGIN CONTENT BODY -->
        <div class="page-content">
            <!-- BEGIN PAGE HEAD-->
            <div class="page-head">
                <!-- BEGIN PAGE TITLE -->
                <div class="page-title">
                    <h1>
                        Move Orders
                        <small>your move orders</small>
                    </h1>
                </div>
                <!-- END PAGE TITLE -->
            </div>
            <!-- END PAGE HEAD-->
            <!-- BEGIN PAGE BREADCRUMB -->
            <ul class="page-breadcrumb breadcrumb">
                <li>
                    <a href="/">Home</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <a href="#">Orders</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <span class="active">Your Orders</span>
                </li>
            </ul>
            <!-- END PAGE BREADCRUMB -->
            @if (TempData["Success"] != null)
            {
                <div class="custom-alerts alert alert-success fade in">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                    <i class="fa-lg fa fa-check"></i>@TempData["Success"]
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="custom-alerts alert alert-danger fade in">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                    <i class="fa-lg fa fa-warning"></i>@TempData["Error"]
                </div>
            }
            <!-- BEGIN PAGE BASE CONTENT -->
            @*<div class="m-heading-1 border-green m-bordered">
                    <h3>DataTables Responsive Extension Demo</h3>
                    <p> Responsive is an extension for DataTables that resolves that problem by optimising the table's layout for different screen sizes through the dynamic insertion and removal of columns from the table. </p>
                    <p>
                        For more info please check out
                        <a class="btn red btn-outline" href="https://www.datatables.net/extensions/responsive/" target="_blank">the official documentation</a>
                    </p>
                </div>*@
            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN EXAMPLE TABLE PORTLET-->
                    <div class="portlet box red">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-globe"></i> My Move Orders
                            </div>
                            <div class="tools"> </div>
                        </div>
                        <div class="portlet-body">
                            <table class="table table-striped table-bordered table-hover dt-responsive" width="100%" id="sample_4">
                                <thead>
                                    <tr>
                                        <th class="all">Order Number</th>
                                        <th class="all">Order Date</th>
                                        <th class="all">Preferred Time</th>
                                        <th class="all">Piano Type</th>
                                        <th class="all">Piano Name</th>
                                        <th class="all">Make</th>
                                        <th class="all">Bench</th>
                                        <th class="all">Box</th>
                                        <th class="all">Stairs</th>
                                        <th class="none">Color</th>
                                        <th class="none">Model</th>
                                        <th class="none">Pickup Address</th>
                                        <th class="none">Delivery Address</th>
                                        <th class="none">Pickup Date</th>
                                        <th class="none">Delivery Date</th>
                                        <th class="none">Notes</th>
                                        <th class="none">Services</th>
                                        <th class="none">Customer</th>                                    
    @*
        min-phone-l min-tablet <th class="desktop"></th>
    <th class="none"></th>*@
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model)
                                    {
                                        <tr>
                                            <td>@order.OrderNumber</td>
                                            <td>@order.OrderDate</td>
                                            <td>@order.PreferredPickupDateTime</td>
                                            <td>@order.PianoType</td>
                                            <td>@order.PianoName</td>
                                            <td>@order.PianoMake</td>
                                            <td>@(order.IsBench ? "W/B" : "N/B")</td>
                                            <td>@(order.IsBoxed ? "Yes" : "No")</td>
                                            <td>@(order.IsStairs ? "Yes" : "No")</td>
                                            <td>@order.PianoColor</td>
                                            <td>@order.PianoModel</td>
                                            <td>@Html.Raw(order.PickupAddressString)</td>
                                            <td>@Html.Raw(order.DeliveryAddressString)</td>
                                            <td>@order.PickupDate</td>
                                            <td>@order.DeliveryDate</td>
                                            <td>@order.Notes</td>
                                            <td>
                                                <table class="m-grid">
                                                    @foreach (var service in @order.Services)
                                                    {
                                                        <tr>
                                                            <td class="m-grid-col-md-2">@service.ServiceCode</td>
                                                            <td class="m-grid-col-md-4">@service.ServiceType</td>
                                                            <td class="m-grid-col-md-2">@service.ServiceCharges</td>
                                                            <td class="m-grid-col-md-4"></td>
                                                        </tr>
                                                    }
                                                </table>
                                            </td>
                                            <td>@order.Customer</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- END EXAMPLE TABLE PORTLET-->
                </div>
            </div>
            <!-- END PAGE BASE CONTENT -->
        </div>
        <!-- END CONTENT BODY -->
    </div>
    <!-- END CONTENT -->
