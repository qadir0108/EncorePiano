            debugger
            if (data.IsSucess) {
                wfp.showSuccess('Address has been updated successfully.');
            }
            else {
                wfp.showError(data.ErrorMessage);
            }
            $("#AddressModal").modal('hide');
        };

        return{
            initEditSuccess: function (data, status) {
                handleEditSuccess(data, status);
            }
        }
    }();
</script>
