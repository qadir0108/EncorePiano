            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN EXAMPLE TABLE PORTLET-->
                    <div class="portlet box red">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-globe"></i> Consignments
                            </div>
                            <div class="tools"> </div>
                        </div>
                        <div class="portlet-body">
                            <table class="table table-striped table-bordered table-hover dt-responsive" width="100%" id="sample_4">
                                <thead>
                                    <tr>
                                        <th class="all">Cons Number</th>
                                        <th class="all">Order Number</th>
                                        <th class="all">Creation Date</th>
                                        <th class="all">Warehouse</th>
                                        <th class="all">Vehicle</th>
                                        <th class="all">Driver</th>
    @*
        min-phone-l min-tablet <th class="desktop"></th>
    <th class="none"></th>*@
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model)
                                    {
                                        <tr>
                                            <td>@order.ConsignmentNumber</td>
                                            <td>@order.OrderNumber</td>
                                            <td>@order.CreatedAt.ToString()</td>
                                            <td>@order.StartWarehouseName</td>
                                            <td>@order.VehicleName</td>
                                            <td>@order.DriverName</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- END EXAMPLE TABLE PORTLET-->
                </div>
            </div>
            <!-- END PAGE BASE CONTENT -->
        </div>
        <!-- END CONTENT BODY -->
    </div>
